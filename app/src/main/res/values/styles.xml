<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.SampleView" parent="">
        <item name="android:minWidth">100dp</item>
        <item name="android:minHeight">200dp</item>
        <item name="innerColor">@color/colorAccent</item>
    </style>

    <style name="Widget.SampleView.Extended">
        <item name="customBorderWidth">8dp</item>
        <item name="innerColor">@color/inner</item>
        <item name="borderColor">@color/border</item>
    </style>

    <style name="Widget.SampleView.InTheme">
        <item name="innerColor">@color/colorPrimaryDark</item>
    </style>




    <style name="TextAppearance.Sample" parent="TextAppearance.AppCompat"/>

    <style name="TextAppearance.Sample.Body">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.Sample.Body.Primary">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
    <style name="TextAppearance.Sample.Body.Accent">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="TextAppearance.Sample.Headline">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
    <style name="TextAppearance.Sample.Headline.Primary">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
    <style name="TextAppearance.Sample.Headline.Accent">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="TextAppearance.Sample.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>
    <style name="TextAppearance.Sample.Small.Primary">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
    <style name="TextAppearance.Sample.Small.Accent">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

</resources>
